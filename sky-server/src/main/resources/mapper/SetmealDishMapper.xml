<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">
    <insert id="insert" parameterType="SetmealDish">
        insert into setmeal_dish (setmeal_id,dish_id,name,price,copies) values
        <foreach collection="setmealDishes" item="setmealDish" separator=",">
            (#{setmealDish.setmealId},#{setmealDish.dishId},#{setmealDish.name},#{setmealDish.price},#{setmealDish.copies})
        </foreach>
    </insert>
    <delete id="deleteBySetmealIds">
        delete from setmeal_dish where setmeal_id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="getSetmealDishIdByDishId" resultType="java.lang.Long">
        select id from setmeal_dish where
            <foreach collection="idList" item="id" open="dish_id in (" close=")" separator=",">
                #{id}
            </foreach>
    </select>
</mapper>
